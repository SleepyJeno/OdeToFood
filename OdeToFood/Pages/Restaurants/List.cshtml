@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span>
                <button class="btn">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>

</form>

@foreach (var restaurant in Model.Restaurants)
{
    @*this is a helper tag from .NET and not an html one.
      it will iterate over a list of restaurants and display them using the _Summary view page
    *@
    <partial name="_Summary" model="restaurant"/>
    <br />
}

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>
@section footer {
    <div>@Model.Message</div>
}