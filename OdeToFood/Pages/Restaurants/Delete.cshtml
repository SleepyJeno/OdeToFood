@page "{restaurantId}"
@model OdeToFood.Pages.Restaurants.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h2>Deleting a restaurant</h2>
<div class="alert alert-danger">
    Are you sure you want to delete @Model.Restaurant.Name ?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Yes, I am sure</button>
    <a asp-page="List" class="btn btn-primary">No, Go back</a>
</form>
